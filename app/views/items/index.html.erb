<div class="jumbotron">
  <%= notice %>
</div>
<div class="panel panel-default">
  <!-- Default panel contents -->
<div class="panel-heading">产品列表:</div>
  <div class="panel-body">
  <table class="table">
    <thead>
      <tr>
        <th>Code</th>
        <th>price</th>
        <th>name</th>
        <th>operate</th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.code_id %></td>
          <td><%= item. price %></td>
          <td><%= item. name %></td>
          <td><div class="btn-group">
          <%= link_to 'Show', item, class:"btn btn-info" %>
          <%= link_to 'Edit', edit_item_path(item), class:"btn btn-primary"%>
          <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
          </div></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<%= link_to 'New Item', new_item_path, class:"btn btn-primary" %>
